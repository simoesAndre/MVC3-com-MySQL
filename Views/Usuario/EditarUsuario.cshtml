@model Usuario
@{
    ViewData["Title"] = "Edição de Usuário -";
}
<h2>Edição de Usuário</h2>
<form asp-action="EditarUsuario" method="POST" style="padding-top: 20px;">
    <div class="row">
        <div class="col-2">
            <label asp-for="Nome">Nome:</label>
        </div>
        <div class="col-3">
            <input asp-for="Nome" />
        </div>
        <div class="col-7">

        </div>    
    </div>
    <div class="row">
        <div class="col-2">
            <label asp-for="DataNascimento">Data de Nascimento:</label>
        </div>
        <div class="col-3">
            <input asp-for="DataNascimento" />
        </div>
        <div class="col-7">

        </div>       
    </div>
    <div class="row">
        <div class="col-2">
            <label asp-for="Login">Login:</label>
        </div>
        <div class="col-3">
            <input asp-for="Login" />
        </div>
        <div class="col-7">

        </div>     
    </div>
    <div class="row">
        <div class="col-2">
            <label asp-for="Senha">Senha:</label>
        </div>
        <div class="col-3">
            <input asp-for="Senha" />
        </div>
        <div class="col-7">

        </div> 
    </div>
    <div class="row">
        <div class="col-2">
            <label asp-for="Tipo">Tipo:</label>
        </div>
        <div class="col-3">
            <input asp-for="Tipo" />
        </div>
        <div class="col-7">

        </div>     
    </div>
    <div class="row">
        <div class="col-2">
            <label asp-for="Id">Id do Usuário:</label>
        </div>
        <div class="col-3">
            <input asp-for="Id"/>
        </div>
        <div class="col-7">

        </div>    
    </div>
    <div class="row">
        <div class="col-2" style="padding-top: 20px;">
            <input type="submit" value="Editar" />
        </div>
        <div class="col-10">

        </div>  
    </div>
</form>